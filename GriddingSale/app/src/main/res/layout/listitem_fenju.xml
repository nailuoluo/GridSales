<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fenju_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="2dip"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="3dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fenju_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/fenju_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:textSize="20dip"
            android:layout_alignBottom="@id/fenju_imageview"
            android:background="@color/transparent_black"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@id/fenju_imageview" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
